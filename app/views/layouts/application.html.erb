<!DOCTYPE HTML>
<html lang="ru">
  <head>
    <meta charset="UTF-8">
    <title>Интернет-конференция участников ГПО ТУСУР</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div id="header">
      <div id="header-wrapper">
        <ul id="header-navigation">
          <li class="" id="link_to_sessions_dashboard">
            <%= image_tag 'nav_sessions_dashboard.png', :class => 'icon', :height => '16', :width => '16', :alt => 'Главная' %>
            <a href="/">Главная</a>
          </li>
          <li>
            <%= link_to "ГПО ТУСУР", "http://gpo.tusur.ru", :target => '_blank' %>
          </li>
          <% if can?(:manage, Claim) %>
            <li>
              <%= link_to 'Заявки участников', manage_conference_expert_claims_path(@conference) %>
            </li>
          <% end %>
          <% if can?(:read, Discourse) %>
            <li>
              <%= link_to "Мои доклады", manage_root_path %>
            </li>
          <% end %>
          <li>
            <%= link_to "Статистика", conference_statistics_path(:conference_id => '2012') %>
          </li>
        </ul>
        <%= render :partial => "esp_auth/shared/header" %>
      </div>
    </div>

    <div id="wrapper">
      <div id="navigation">
        <%= link_to "Отправить заявку на участие", new_manage_conference_claim_path(@conference), :class => 'new_claim_link' %>
        <h1>Интернет-конференция участников ГПО ТУСУР</h1>
      </div>
      <div id="content">
        <div id="page-header">
          <%= content_tag(:div, content_tag(:h1, yield(:page_title)), id: "page-title") if content_for?(:page_title) %>
          <%= content_tag(:div, yield(:local_navigation), id: "local-navigation") if content_for?(:local_navigation) %>
        </div>
        <div id="container-one-column">
          <%= yield %>
        </div>
      </div>
    </div>

    <div id="footer">
      <%= render :partial => 'common/footer' %>
    </div>

  </body>
</html>

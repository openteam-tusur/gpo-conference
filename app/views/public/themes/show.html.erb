<h1><%= resource.name %></h1>

<%= link_to "&larr; Назад к списку направлений".html_safe, themes_path  %>

<ul>
  <% resource.projects.group_by(&:chair).each do |chair, projects| %>
    <li>
      <h3><%= chair.title %></h3>
      <ul>
        <% projects.each do |project| %>
          <li>
            <h4><%= project.title %></h4>
            <ul>
              <% project.discourses.each do |discourse| %>
                <li><%= link_to discourse.title, theme_project_discourse_path(resource, project, discourse) %></li>
              <% end %>
            </ul>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>

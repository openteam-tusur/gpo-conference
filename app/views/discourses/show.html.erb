<% content_for :page_title do %>
  <h1>
    <%= image_tag 'icon_report.png', :class => 'icon', :width => '16', :height => '16' %>
    <%= resource.title %>
  </h1>
<% end %>

<% content_for :local_navigation do %>
  <%= link_to "&larr; Назад на просмотр направления".html_safe, theme_path(@theme) %>
<% end %>

<div id="left">
  <ul class='listing' id='projects'>
    <li>
      <div class='project_with_stats'>
        <div class='discourse_card'>
          <div>
            <%= image_tag 'icon_theme.png', :class => 'icon', :width => '16', :height => '16' %>
            <%= link_to @theme, theme_path(@theme) %>
          </div>

          <div>
            <%= image_tag 'icon_chair.png', :class => 'icon', :width => '16', :height => '16' %>
            <%= link_to "Кафедра #{resource.chair.abbr}", theme_path(@theme, :anchor => "chair_#{I18n.transliterate(resource.chair.abbr).gsub(/\s/, '_')}") %>
          </div>

          <div>
            <%= image_tag 'icon_project.png', :class => 'icon', :width => '16', :height => '16' %>
            <%= link_to resource.project, theme_path(@theme, :anchor => "project_#{resource.project.id}") %>
          </div>

          <div>
            <%= image_tag 'icon_users.png', :class => 'icon', :width => '16', :height => '16' %>
            <%= resource.authors.join(', ') %>
          </div>

          <div><%= resource.description %></div>

          <div>
            <%= image_tag 'icon_pdf.png', :class => 'icon', :width => '16', :height => '16' %>
            <%= link_to "Скачать доклад", resource.vfs_path %>
          </div>
        </div>
      </div>
    </li>
  </ul>

  <div class="comments ajaxed">
    <h3>Комментарии</h3>
    <ul>
      <% resource.comments.roots.order('created_at ASC').each do |comment| %>
        <li><%= render comment %></li>
      <% end %>
    </ul>
    <% if current_user %>
      <%= link_to "Оставить комментарий", new_theme_project_discourse_comment_path(@theme, @project, resource), :remote => true, :class => 'new_record new_comment' %>
    <% end %>
  </div>

</div>

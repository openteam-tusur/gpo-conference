<%= simple_form_for [:manage, @project_member_claim || current_user.project_member_claims.build] do |f| %>
  <%= f.error :base %>
  <%= f.input :project_id, as: :select, collection: Project.ordered_by_title %>
  <%= f.input :role, as: :radio_buttons %>
  <%= f.button :submit %>
<% end %>

<%= simple_form_for [:manage, @expert_claim || current_user.expert_claims.build] do |f| %>
  <%= f.input :theme_id, as: :select, collection: Theme.ordered_by_name %>
  <%= f.button :submit %>
<% end %>


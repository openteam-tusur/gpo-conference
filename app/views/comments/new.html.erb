<li class='ajaxed_item comment_form'>
  <%= simple_form_for [association_chain, @comment].flatten, :html => { :remote => true } do |f| %>
    <%= f.input :parent_id, :as => :hidden %>
    <%= f.input :body, :as => :text, :label => false %>

    <div class="buttons">
      <%= f.submit "Сохранить" %>
      <%= link_to 'Отмена', '#', :class => 'cancel new_record' %>
    </div>

  <% end %>
</li>

<%= content_for :page_title, "Заявка участника" %>

<%= simple_form_for [@current_conference, @project_member_claim || current_user.project_member_claims.build] do |f| %>
  <%= f.error :base %>
  <%= f.input :project_id, :as => :select, :collection => @current_conference.projects.ordered_by_title, :hint => "Начните вводить код или название проекта", :wrapper_html => { :class => 'long' } %>
  <%= f.button :submit, "Создать заявку" %>
<% end %>
